{
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "resolveJsonModule": true, // json import
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "lib": ["DOM", "ES2016"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
